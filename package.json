{
  "name": "@mdn-seed/main",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "Martin",
  "license": "MIT",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "rest": "yarn workspace @mdn-seed/rest",
    "db": "yarn workspace @mdn-seed/db",
    "start": "yarn build && node build/index.js",
    "start:dev": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:output": "jest --coverage --output='coverage'",
    "build": "rimraf ./build && tsc",
    "build:rest": "docker build --tag seed_ts -f Dockerfile.rest .",
    "start:rest": "docker run -p 9000:9000 seed_ts:latest"
  },
  "dependencies": {
    "@types/uuid": "^8.0.0",
    "body-parser": "^1.19.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.2",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1"
  }
}